@using (Html.BeginForm("Create", "operations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    

    <table id="example" class="display" style="width: 100%">
        <thead>
            <tr>
                <th scope="col">Наименование</th>
                <th scope="col">Количество</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>



            @for (int i = 0; i < @ViewBag.countRow; i++)

            {
                
                <tr>
 
                    <td>
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.DropDownList("[" + i + "].id_product", ViewBag.id_product1 as SelectList, htmlAttributes: new {@class = "form-control"})
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.Editor("[" + i + "].count")
                            </div>
                        </div>
                    </td>
                    <td> <input type="hidden" name="[@i].id_ttn" id="id_ttn" value="@ViewBag.idTTN" /></td>
                </tr>

            }



        </tbody>
    </table>
    <input name="sub" type="submit" value="Сохранить и выйти">
}


